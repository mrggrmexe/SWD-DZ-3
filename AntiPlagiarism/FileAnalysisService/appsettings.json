{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres;Port=5432;Database=antipdb;Username=postgres;Password=postgres;Pooling=true;",
    "SqliteConnection": "Data Source=analysis.db"
  },
  "ServiceSettings": {
    "FileStoringServiceUrl": "http://file-storing-service:8080",
    "GatewayUrl": "http://gateway:8080",
    "MaxConcurrentAnalyses": 10
  },
  "WordCloudSettings": {
    "ApiUrl": "https://quickchart.io/wordcloud",
    "DefaultWidth": 800,
    "DefaultHeight": 600,
    "MaxWords": 100,
    "Colors": [ "#375E97", "#FB6542", "#FFBB00", "#3F681C", "#8D230F" ],
    "FallbackImageUrl": "https://quickchart.io/chart?c={type:'wordCloud'}"
  },
  "PlagiarismDetection": {
    "SimilarityThreshold": 0.7,
    "CheckPreviousDays": 30,
    "MaxPreviousWorksToCheck": 50
  },
  "HealthChecks": {
    "Enabled": true,
    "Endpoint": "/health",
    "DatabaseCheckEnabled": true,
    "MemoryThresholdMB": 500
  }
}